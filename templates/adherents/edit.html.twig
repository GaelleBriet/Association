{% extends 'layouts/base.html.twig' %}

{% block title 'Editer un adhérent' %}

{% block body %}
  {# <div class="container my-5"> #}
    <div class="row">
      <div class="col-md-6 mx-auto">
        <article class="bg-white rounded shadow pin my-5">  
          <div class="col-md-12 p-5">

            <h1 class="text-center">Édition de l'adhérent numéro {{adherent.id}}</h1>


            {{ form_start(form) }}
              {# {{ form_widget(form) }} #}
              {{ form_row(form.first_name) }}
              {{ form_row(form.last_name) }}
              {{ form_row(form.tel) }}
              {{ form_row(form.email) }}
              {# {{ form_row(form.starting_date) }} #}

                {% for adhesion in form.adhesions %}
                  {{ form_row(adhesion.starting_date) }}
                  {{ form_row(adhesion.ending_date) }}
                {% endfor %}  

              <div class="d-inline">
                <input type="submit" value="Modifier l'adhérent" class="mb-3 btn btn-primary me-3 col-12" formnovalidate="formnovalidate">
              </div>

            {{ form_end(form) }}

            <a href="{{ path('app_adherents_show', {id: adherent.id}) }}" class="btn btn-secondary mb-3 col-12 me-3">Retour à l'adhérent</a>


          </div>
        </article>  
      </div>
    </div>
  {# </div> #}
{% endblock %}