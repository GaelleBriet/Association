{% extends 'layouts/base.html.twig' %}

{% block title 'Ajouter un adhérent' %}

{% block body %}
  <div class="container my-5 h-100">
    <div class="row">
      <div class="col-md-6 mx-auto">

        <h1 class="text-center">Création d'un adhérent</h1>


        {{ form_start(form) }}

          {{ form_row(form.first_name) }}
          {{ form_row(form.last_name) }}
          {{ form_row(form.tel) }}
          {{ form_row(form.email) }}


          <div class="d-inline">
            <input type="submit" value="{{ submitButtonText|default('Ajouter un adhérent') }}" class="mb-3 btn btn-primary me-3 col-12" formnovalidate="formnovalidate">
          </div>

        {{ form_end(form) }}



      </div>
    </div>
  </div>
{% endblock %}